---
import type {Tags}  from "../content/config";
import Tag from "./Tag.astro";

interface Props {
    title: string
    tags: Tags[]
}

const { title, tags } = Astro.props;
---

<div class="flex flex-col gap-3 border border-rose-400 rounded-2xl p-4 bg-zinc-800 hover:bg-zinc-900">
    <h3 class="text-slate-100 font-bold text-lg">{ title }</h3>
    <slot/>
    <div class="flex flex-row gap-2">
        {tags.map(tag => {
            <Tag tag={tag}>{tag}</Tag>
        })}
    </div>
</div>