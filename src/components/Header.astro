---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from '../consts';
import { Image } from "astro:assets";
import pfp from "../assets/pfp.jpg";
---

<header class='text-slate-100 p-4 space-y-4'>
  <div class='flex flex-row items-end gap-4'>
    <Image
      src={pfp}
      format='avif'
      alt='A little fat Garfield sitting on the ground'
      class='rounded-full h-14 w-14'
    />
    <h2 class='text-2xl font-semibold text-slate-100'>{SITE_TITLE}</h2>
  </div>
  <nav class='space-x-2 text-rose-400 pl-1 md:space-x-5'>
    <HeaderLink href='/'>Home</HeaderLink>
    <HeaderLink href='/blog'>Blog</HeaderLink>
    <HeaderLink href='/setup'>Setup</HeaderLink>
    <!-- <HeaderLink href="/guestbook">Guestbook</HeaderLink> -->
    <HeaderLink href='/faq'>FAQ</HeaderLink>
  </nav>
</header>
