---
import type { Tags } from '../content/config'
import Tag from './Tag.astro'

type Props = {
  title: string
  tags: Tags[]
}

const { title, tags } = Astro.props
---

<div
  class='text-slate-50 flex flex-col gap-3 border border-rose-400 rounded-2xl p-4 bg-zinc-800/90 backdrop-blur-sm hover:bg-zinc-900'
>
  <h3 class='text-slate-100 font-bold text-lg'>{title}</h3>
  <slot />
  <div class='flex flex-row gap-2'>
    {
      tags.map(tag => {
        return <Tag tag={tag}>{tag}</Tag>
      })
    }
  </div>
</div>
