---
import type { CollectionEntry } from 'astro:content';
import type { HTMLAttributes } from 'astro/types';
import { Image } from 'astro:assets';

type Props = CollectionEntry<'reviews'> & HTMLAttributes<'a'>;

const { data, slug } = Astro.props;
const { name, image } = data;
---

<a
  href={`/setup/${slug}/`}
  class="flex flex-col overflow-hidden border border-rose-400 rounded-2xl bg-zinc-800 text-gray-400 max-h-40 hover:bg-zinc-900"
>
  <div class="basis-1/3 p-2">
    <h3 class="text-slate-100 font-bold text-center h-12">{name}</h3>
  </div>
  <Image
    format="avif"
    quality="low"
    src={image}
    alt=""
    class="object-cover w-full basis-1/3 rounded-t-2xl"
  />
</a>
